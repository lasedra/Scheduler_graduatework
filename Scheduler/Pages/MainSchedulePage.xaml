<Page x:Class="Scheduler.Pages.MainSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Scheduler.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainSchedulePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="Gray">
            <StackPanel Orientation="Horizontal" Margin="15 10 10 10" HorizontalAlignment="Left" Background="DarkGray">
                <TextBlock Text="РАСПИСАНИЕ ДЛЯ ГРУППЫ:" VerticalAlignment="Center"/>
                <ComboBox Height="25" Width="100" Margin="5 0 0 0">
                    <ComboBoxItem Content="Группа 1"/>
                    <ComboBoxItem Content="Группа 2"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Background="DarkGray">
                <Button Content="Назад" Width="50" Height="30" Margin="5"/>
                <TextBlock Text="01.01.2020 - 05.01.2020" VerticalAlignment="Center" Margin="5"/>
                <Button Content="+" Width="30" Height="30" Margin="5"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Margin="10" Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <DataGrid Margin="5" Grid.Row="0" Grid.Column="0"/>
            <DataGrid Margin="5" Grid.Row="0" Grid.Column="1"/>
            <DataGrid Margin="5" Grid.Row="1" Grid.Column="0"/>
            <DataGrid Margin="5" Grid.Row="1" Grid.Column="1"/>
            <DataGrid Margin="5" Grid.Row="2" Grid.Column="0"/>
        </Grid>
    </Grid>
</Page>
