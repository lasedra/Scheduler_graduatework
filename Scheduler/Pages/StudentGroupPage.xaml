<Page x:Class="Scheduler.Pages.StudentGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Scheduler.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentGroupPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="250" Height="50" Margin="10">
                <TextBlock Text="Код группы:" Foreground="{StaticResource Text gray}"/>
                <TextBox x:Name="StudentGroupCodeTxtBox"/>
            </StackPanel>
            <StackPanel Width="250" Height="50" Margin="10">
                <TextBlock Text="Специализация: (не обяз.)" Foreground="{StaticResource Text gray}"/>
                <TextBox x:Name="SpecializationTxtBox"/>
            </StackPanel>
            <Button Content="Добавить группу" Margin="10" Height="50" Padding="10"
                    x:Name="AddNewGroupBttn" Click="AddNewGroupBttn_Click"/>
            <Button Content="Приступить к работе!" Visibility="Hidden" Margin="10" Padding="10"
                    x:Name="DoneWithGroupsBttn" Click="DoneWithGroupsBttn_Click"/>
        </StackPanel>

        <DockPanel Grid.Row="1">
            <StackPanel Width="500">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Группа:" Margin="5"/>
                    <TextBlock Text="Специализация:" Margin="200 5 5 5"/>
                </StackPanel>
                <ListView x:Name="StudentsGroupsListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding StudentGroupCode}" Margin="5"/>
                                <TextBlock Text="{Binding Specialization}" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="200">
                <TextBlock Text="Изучаемые дисциплины" Margin="5" Foreground="{StaticResource Text gray}"/>
                <DataGrid Height="170">
                    
                </DataGrid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
