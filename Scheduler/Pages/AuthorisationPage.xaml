<Page x:Class="Scheduler.Pages.AuthorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Scheduler.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorisationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Background="Bisque">
            <TextBlock Text="Логин:" Margin="5 5 5 0"/>
            <TextBox Name="LoginTextBox" Margin="5"/>
            <TextBlock Text="Пароль: " Margin="5 5 5 0"/>
            <TextBox Name="PasswordTextBox" Margin="5"/>
            <Button Height="30" Margin="5" Content="Войти" Name="LogInButton" Click="LogInButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
