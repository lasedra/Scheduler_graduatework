<Window x:Class="Scheduler.Windows.StudentGroupPickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler.Windows"
        mc:Ignorable="d"
        Title="StudentGroupPickWindow"
        MinHeight="130" MinWidth="350"
        MaxHeight="130" MaxWidth="350">
    <Grid>
        <StackPanel Background="{StaticResource Mid gray}">
            <TextBlock Margin="5 5 5 0" Text="Новое расписание от 01.01.2020 для группы:" Foreground="White" FontWeight="SemiBold" FontSize="15"/>
            <ComboBox Height="30" Margin="5" Name="StudentGroupsComboBox" SelectionChanged="StudentGroupsComboBox_SelectionChanged" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StudentGroupCode}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Подтвердить" Name="SubmitBttn" Click="SubmitBttn_Click" Margin="5" Padding="5" 
                    Background="{StaticResource Light red}" Style="{StaticResource RoundedButtonStyle}"
                    Height="40"/>
        </StackPanel>
    </Grid>
</Window>
