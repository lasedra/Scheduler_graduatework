<Window x:Class="Scheduler.Windows.ConnectionPickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler.Windows"
        mc:Ignorable="d"
        Title="ConnectionPickWindow"
        Height="130" Width="300"
        MinHeight="130" MinWidth="300"
        MaxHeight="130" MaxWidth="300"
        Loaded="ToolWindow_Loaded">
    <Grid>
        <StackPanel Background="{StaticResource Mid gray}">
            <TextBlock Margin="5 5 5 0" Text="Выберите сервер для подключения:" Foreground="White" FontWeight="SemiBold" FontSize="15"/>
            <ComboBox Margin="5" Name="ConnectionsComboBox" SelectionChanged="ConnectionsComboBox_SelectionChanged" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Key}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Подтвердить" Name="SubmitBttn" Click="SubmitBttn_Click" Margin="5" Padding="5" Background="{StaticResource Light red}"/>
        </StackPanel>
    </Grid>
</Window>
